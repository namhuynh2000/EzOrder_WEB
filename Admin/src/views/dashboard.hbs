                                            Waiting
                                        {{/ifEquals}}
                                        {{#ifEquals this.status 2}}
                                            <div class="tm-status-circle moving"></div>
                                            Preparing
                                        {{/ifEquals}}
                                        {{#ifEquals this.status 3}}
                                            <i class="fas fa-check-circle"></i>
